<script>
  function searchTable() {
    const input = document.getElementById("searchInput").value.toLowerCase();
    const rows = document.querySelectorAll("#pokemonTable tr");

    rows.forEach(row => {
      const handle = row.querySelector("td:nth-child(1)");
      const pokemon = row.querySelector("td:nth-child(2)");

      if (!handle || !pokemon) return;

      const match =
        handle.textContent.toLowerCase().includes(input) ||
        pokemon.textContent.toLowerCase().includes(input);

      row.style.display = match ? "" : "none";
    });
  }
  </script>
</head>

<body>

<h1>Pocket Master List</h1>

<div class="search-box">
  <input
    type="text"
    id="searchInput"
    onkeyup="searchTable()"
    placeholder="Search Twitter handle or Pokémon..."
  >
</div>

<table>
  <thead>
    <tr>
      <th>Twitter Handle</th>
      <th>Pokémon Name</th>
    </tr>
  </thead>

